{{if data.gameover}}
	<html><head><style>
		body { background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);}
		.container {margin: 0 auto; background: rgba(0, 0, 0, 0.7); border-radius: 15px; padding: 20px; border: 2px solid #f72585; box-shadow: 0 0 20px rgba(247, 37, 133, 0.5); }
		.header { text-align: center; color: #f72585; text-shadow: 0 0 10px rgba(247, 37, 133, 0.8); margin-bottom: 20px; font-size: 16px; }
		.game-over { background: rgba(247, 37, 133, 0.3); padding: 20px; border-radius: 10px; text-align: center; margin: 20px 0; border: 2px solid #f72585; }
		.stat-box { background: rgba(76, 201, 240, 0.2); padding: 12px; border-radius: 10px; margin: 8px 0; text-align: center; border: 1px solid #4cc9f0; font-size: 12px; }
		.stat-value { font-size: 18px; font-weight: bold; color: #4cc9f0; }
		.stat-label { font-size: 12px; color: #4cc9f0; }
		.action-btn { background: linear-gradient(45deg, #f72585, #b5179e); color: white; border: none; padding: 12px 20px; border-radius: 6px; cursor: pointer; font-size: 13px; font-family: 'Courier New', monospace; transition: all 0.3s; text-decoration: none; display: inline-block; font-weight: bold; }
		.action-btn:hover { transform: scale(1.05); box-shadow: 0 0 15px rgba(247, 37, 133, 0.8); }
		.enemy-name { font-size: 20px; color: #f72585; text-shadow: 0 0 8px rgba(247, 37, 133, 0.8); }
		.message { background: rgba(255, 255, 255, 0.1); padding: 12px; border-radius: 10px; margin: 12px 0; text-align: center; font-size: 14px; border: 1px solid #4cc9f0; }
		.stats-container { display: flex; justify-content: space-between; margin: 20px 0; }
		.stat-column { width: 45%; min-width: 250px; }
		.health-bar { height: 15px; background: #333; border-radius: 8px; margin: 8px 0; overflow: hidden; }
		.health-fill { height: 100%; background: linear-gradient(90deg, #ff6b6b, #f72585); border-radius: 8px; transition: width 0.5s; }
		.magic-bar { height: 15px; background: #333; border-radius: 8px; margin: 8px 0; overflow: hidden; }
		.magic-fill { height: 100%; background: linear-gradient(90deg, #4cc9f0, #4895ef); border-radius: 8px; transition: width 0.5s; }
		.player-section, .enemy-section { background: rgba(0, 0, 0, 0.5); padding: 12px; border-radius: 10px; margin: 12px 0; border: 1px solid #4cc9f0; min-height: 180px; display: flex; flex-direction: column; }
		.actions-container { display: flex; justify-content: center; gap: 10px; margin: 20px 0; flex-wrap: wrap; }
		.actions-container a, .game-over a { background: linear-gradient(45deg, #f72585, #b5179e) !important; color: white !important; border: none !important; padding: 12px 20px !important; border-radius: 6px !important; cursor: pointer !important; font-size: 13px !important; font-family: 'Courier New', monospace !important; transition: all 0.3s !important; text-decoration: none !important; display: inline-block !important; font-weight: bold !important; }
		.actions-container a:hover, .game-over a:hover { transform: scale(1.05); box-shadow: 0 0 15px rgba(247, 37, 133, 0.8) !important; }
	</style></head><body>
	<div class='container'>
		<div class='header'><h2>ARCADE BATTLE</h2></div>

		<div class='game-over'>
			<h3>{{:data.information}}</h3>
			{{:helper.link('NEW GAME', 'power', {'new_game' : 1}, data.gameover ? null : 'disabled')}}
		</div>
	</div></body></html>
