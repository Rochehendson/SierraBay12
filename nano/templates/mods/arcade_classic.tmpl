	<div class='container'>
		<div class='header'><h2>ARCADE BATTLE</h2></div>

		{{if data.information}}
			<div class='message'><i>{{:data.information}}</i></div>
		{{/if}}

		<div class='stats-container'>
			<div class='stat-column'>
				<div class='player-section'>
					<center><h3>PLAYER</h3></center>
					<div class='stat-box'>
						<div class='stat-label'>HEALTH</div>
						<div class='stat-value'>{{:data.player_health}}</div>
							<div class='health-bar'><div class='health-fill' style='width: {{:(data.player_health / 30) * 100}}%'></div></div>
					</div>
					<div class='stat-box'>
						<div class='stat-label'>MANA</div>
						<div class='stat-value'>{{:data.player_mana}}</div>
							<div class='magic-bar'><div class='magic-fill' style='width: {{:(data.player_mana / 10) * 100}}%'></div></div>
					</div>
				</div>
			</div>

			<div class='stat-column'>
				<div class='enemy-section'>
					<center><h3 class='enemy-name'>ENEMY: {{:data.enemy_name}}</h3></center>
					<div class='stat-box'>
						<div class='stat-label'>HEALTH</div>
						<div class='stat-value'>{{:data.enemy_health}}</div>
							<div class='health-bar'><div class='health-fill' style='width: {{:(data.enemy_health / 45) * 100}}%'></div></div>
					</div>
					<div class='stat-box'>
						<div class='stat-label'>MANA</div>
						<div class='stat-value'>{{:data.enemy_mana}}</div>
							<div class='magic-bar'><div class='magic-fill' style='width: {{:(data.enemy_mana / 20) * 100}}%'></div></div>
					</div>
				</div>
			</div>
		</div>

		<div class='actions-container'>
			{{:helper.link('ATTACK', 'lightning', {'attack' : 1}, data.gameover ? 'disabled' : null)}}
			{{:helper.link('HEAL', 'heart', {'heal' : 1}, data.gameover ? 'disabled' : null)}}
			{{:helper.link('REGAIN MANA', 'gear', {'regain_mana' : 1}, data.gameover ? 'disabled' : null)}}
			{{:helper.link('NEW GAME', 'power', {'new_game' : 1}, null)}}
		</div>
	</div></body></html>
{{/if}}
